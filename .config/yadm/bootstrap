#/bin/bash

YADM_FOLDER=$HOME/.config/yadm

for script in $YADM_FOLDER/tools/**/install.sh; do
  if [[ -f "$script" ]]; then
    echo "Running $script"
    sh "$script"
  fi
done

STARTUP_FILE="$HOME/.config/yadm/startup.sh"

cat $HOME/.bashrc | grep $STARTUP_FILE

if [[ $? -ne 0 ]]; then
       echo "source $STARTUP_FILE" >> $HOME/.bashrc
fi